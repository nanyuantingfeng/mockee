#!/usr/bin/env node

const program = require('commander')

program
  .version('1.0.0')
  .option('-p, --port <n>', '端口号')
  .option('-m, --mock <s>', '跟路径')
  .option('-b, --base <s>', 'URL修正')
  .parse(process.argv)

let {mock, port, base} = program

mock = mock || 'mock'
prot = port || 3000

require('../index')({mock, port, base})

